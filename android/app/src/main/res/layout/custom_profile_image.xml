<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pb_custom_profile_image_success_rate"
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progressBackgroundTint="@color/black03_272C33"
            android:progressDrawable="@drawable/progress_study_success_rate"
            android:progressTint="@color/green06_7ADC4B" />

        <ImageView
            android:id="@+id/iv_custom_profile_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:contentDescription="@string/custom_profile_image_content_description"
            tools:src="@drawable/ic_launcher_foreground" />

    </FrameLayout>
</layout>
